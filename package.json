{
  "name": "@dolbyio/react-native-iapi-sdk",
  "version": "3.4.0",
  "description": "Dolby.io iAPI SDK for React Native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "lib",
    "android",
    "ios",
    "src",
    "dolbyio_react-native-iapi-sdk.podspec",
    "!android/build",
    "!ios/build"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage=true",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,ts,tsx}\"",
    "prettier:check": "prettier --check \"src/**/*.{js,ts,tsx}\"\n",
    "prettier:fix": "prettier --write \"src/**/*.{js,ts,tsx}\"\n",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example/ios && pod install",
    "pods:x86_64": "cd example/ios && arch -x86_64 pod install",
    "bootstrap": "yarn example && yarn && yarn pods",
    "documentation": "rm -rf docs && typedoc --disableSources",
    "documentation:convert": "yarn documentation && rm -rf scripts/docs && cd scripts && node convertDocs.js",
    "documentation:append": "git add docs",
    "license": "yarn npm-license-crawler --production --start ./ --json ./LICENSES.json --exclude ./example --onlyDirectDependencies"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://dolby.io",
  "author": "Dolby.io (https://dolby.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://dolby.io/issues"
  },
  "homepage": "https://dolby.io#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@trivago/prettier-plugin-sort-imports": "^2.0.4",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.13.1",
    "@types/react-native": "0.65.0",
    "commitlint": "^11.0.0",
    "commitlint-config-jira": "^1.5.1",
    "commitlint-plugin-jira-rules": "^1.5.1",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "npm-license-crawler": "^0.2.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "16.13.1",
    "react-native": "0.65.0",
    "react-native-builder-bob": "^0.18.0",
    "release-it": "^14.2.2",
    "typedoc": "^0.22.4",
    "typedoc-plugin-markdown": "^3.11.0",
    "typedoc-plugin-missing-exports": "^0.22.4",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/utils"
    ],
    "setupFilesAfterEnv": [
      "./src/setupTest.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn prettier:check && yarn typescript && touch .hook_commit",
      "post-commit": " ( [ -e .hook_commit ] && rm .hook_commit && yarn append && git commit --amend -C HEAD --no-verify) "
    }
  },
  "commitlint": {
    "plugins": [
      "commitlint-plugin-jira-rules"
    ],
    "extends": [
      "jira"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false,
          "importOrder": [
            "^@(.*)$",
            "^[./]"
          ],
          "importOrderSeparation": true
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "importOrder": [
      "^@(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
