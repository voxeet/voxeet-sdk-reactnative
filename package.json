{
  "name": "@dolbyio/react-native-iapi-sdk",
  "version": "0.1.0",
  "description": "Dolby.io iAPI SDK for React Native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "dolbyio_react-native-iapi-sdk.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "lint-fix": "eslint --fix \"src/**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example/ios && arch -x86_64 pod install",
    "bootstrap": "yarn example && yarn && yarn pods",
    "generate:licenses": "license-report --only=prod --package=package.json > licenses.json ; node ./scripts/licensesToMarkdown.js > LICENSES.md",
    "generate:documentation": "rm -rf docs && typedoc --disableSources",
    "generate": "yarn generate:documentation",
    "append:documentation": "git add docs",
    "append:licenses": "rm licenses.json && git add ./LICENSES.md",
    "append": "yarn append:licenses && yarn append:documentation"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://dolby.io",
  "author": "KÃ©vin Le Perf <kevin.leperf@dolby.com> (https://dolby.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://dolby.io/issues"
  },
  "homepage": "https://dolby.io#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "commitlint": "^11.0.0",
    "commitlint-config-jira": "^1.5.1",
    "commitlint-plugin-jira-rules": "^1.5.1",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "license-report": "^4.5.0",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "16.13.1",
    "react-native": "0.65.0",
    "react-native-builder-bob": "^0.18.0",
    "release-it": "^14.2.2",
    "typedoc": "^0.22.4",
    "typedoc-plugin-markdown": "^3.11.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn typescript && yarn generate && touch .hook_commit",
      "post-commit": " ( [ -e .hook_commit ] && rm .hook_commit && yarn append && git commit --amend -C HEAD --no-verify) "
    }
  },
  "commitlint": {
    "plugins": [
      "commitlint-plugin-jira-rules"
    ],
    "extends": [
      "jira"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "typedoc-plugin-missing-exports": "^0.22.3"
  }
}
